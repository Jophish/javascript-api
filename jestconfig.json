{
  "verbose": true,
  "testEnvironment": "node",
  "collectCoverage": true,
  "mapCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "coverageReporters": ["html", "text", "lcov"],
  "transform": {
    "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": "(/__tests__/.*)\\.(ts)$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ]
}